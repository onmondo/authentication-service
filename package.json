{
  "name": "authentication-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "_moduleAliases": {
    "@common": "./common",
    "@utils": "./utils",
    "@seed": "./seed",
    "@services": "./services"
  },
  "scripts": {
    "start:dev-auth": "nodemon ./services/Auth/index.js",
    "start:auth": "node -r dotenv/config ./services/Auth/index.js dotenv_config_path=./config.env",
    "start:sms": "node -r dotenv/config ./services/SMS/index.js dotenv_config_path=./config.env",
    "start:users": "node -r dotenv/config ./services/Users/index.js dotenv_config_path=./config.env",
    "seed:users": "node -r dotenv/config ./server/MongoDB/index.js dotenv_config_path=.env",
    "seed:test-users": "node -r dotenv/config ./seed/Users/seeder.js dotenv_config_path=.env",
    "test:auth": "mocha --require node_modules/dotenv/config dotenv_config_path=./config.env ./__test__ --recursive --file ./__test__/tdd-integration-test/mocha-setup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmondo/authentication-api.git"
  },
  "author": "John Raymond Blando",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/onmondo/authentication-api/issues"
  },
  "homepage": "https://github.com/onmondo/authentication-api#readme",
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "module-alias": "^2.2.2",
    "mongodb": "^3.5.7",
    "morgan": "^1.10.0",
    "randomatic": "^3.1.1",
    "redis": "^3.0.2",
    "request": "^2.88.2",
    "requestretry": "^4.1.0",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "faker": "^4.1.0",
    "regenerator-runtime": "^0.13.5",
    "supertest": "^4.0.2"
  }
}
